{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@enlight-webtv/analytics-services": [
        "libs/services/analytics/src/index.ts"
      ],
      "@enlight-webtv/analytics-services/server": [
        "libs/services/analytics/src/server.ts"
      ],
      "@enlight-webtv/controllers": ["libs/controllers/src/index.ts"],
      "@enlight-webtv/controllers/server": ["libs/controllers/src/server.ts"],
      "@enlight-webtv/models": ["libs/models/src/index.ts"],
      "@enlight-webtv/models/server": ["libs/models/src/server.ts"],
      "@enlight-webtv/network-requestor": ["libs/network/src/index.ts"],
      "@enlight-webtv/network-services": ["libs/services/network/src/index.ts"],
      "@enlight-webtv/network-services/server": [
        "libs/services/network/src/server.ts"
      ],
      "@enlight-webtv/pages": ["libs/pages/src/index.ts"],
      "@enlight-webtv/pages/server": ["libs/pages/src/server.ts"],
      "@enlight-webtv/themes": ["libs/themes/src/index.ts"],
      "@enlight-webtv/ui-components": ["libs/components/src/index.ts"],
      "@enlight-webtv/ui-components/server": ["libs/components/src/server.ts"],
      "@enlight-webtv/utilities": ["libs/utils/src/index.ts"],
      "@enlight-webtv/utilities/server": ["libs/utils/src/server.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
